* {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box; }

body {
  margin: 0;
  background-color: #171c1a;
  font-family: "Liberation Sans"; }

video {
  display: none;
  position: absolute;
  border: 2px solid black; }
  video#remote-video {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%; }
  video#local-video {
    bottom: 2%;
    right: 2%;
    width: 20%; }

#progress {
  display: none;
  margin: auto;
  text-align: center;
  line-height: 100vh;
  font-family: "Liberation Sans";
  font-weight: bold;
  color: white; }

#create-room-section {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center; }
  #create-room-section:before {
    content: "";
    display: inline-block;
    height: 100%;
    vertical-align: middle; }

#create-room {
  display: inline-block;
  width: 40%;
  margin: auto;
  padding: 2rem 1.5rem;
  border-radius: 3px;
  background-color: white;
  vertical-align: middle;
  font-size: 4rem; }
  #create-room h1 {
    margin-top: 0;
    font-size: 3rem; }
  #create-room input {
    display: block;
    width: 100%;
    margin: 1.5rem 0;
    padding: 0.2em;
    border-radius: 2px;
    border: 0px solid white;
    font-size: 1.5rem; }
    #create-room input[type="text"] {
      border: 1px solid #171c1a;
      background-color: white; }
    #create-room input[type="submit"] {
      color: white;
      background-color: #e74c3c;
      margin-bottom: 0; }
      #create-room input[type="submit"]:hover, #create-room input[type="submit"]:focus {
        background-color: #c0392b; }
  #create-room label {
    display: none; }
